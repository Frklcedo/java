package conta;

public class Conta {
	private String nomeDaConta;
	private int numDaConta;
	private double saldo;
	private double limite;
	private boolean contaAtiva;
	
	public void abrirConta() {
		this.contaAtiva = true;
	}
	public void fecharConta() {
		this.contaAtiva = false;
	}
	public boolean getContaAtiva() {
		return this.contaAtiva;
	}
	public String sttsContaAtiva(){
		if (this.contaAtiva) {
			return "Ativa";
		}
		else {
			return "Fechada";
		}
	}

	
	public void setNomeDaConta(String name){
		this.nomeDaConta = name;
	}
	public String getNomeDaConta(){
		return this.nomeDaConta;
	}
	
	public void setNumDaConta(int num){
		this.numDaConta = num;
	}
	public int getNumDaConta(){
		return this.numDaConta;
	}
	
	public void setSaldo(double s){
		this.saldo = s;
	}
	public double getSaldo() {
		return this.saldo;
	}
	
	public double getLimite() {
		return this.limite;
	}
	public void setLimite(double s){
		this.limite = s;
	}

	
	public void depositar(double depot) {
		this.saldo+=depot;
	}
	
	private boolean enough(double retir) {
		return (this.getSaldo()>=retir && this.getLimite() >= retir);
	}
	public void sacar(double depot) {
		if(this.enough(depot)) {
			this.saldo-=depot;
		}
		else {
			System.out.println("Operação inválida.");
		}
	}
	
	public void status() {
		
		System.out.println("Status da conta: ");
		System.out.println("Número da conta: " + this.getNumDaConta());
		System.out.println("Dono da conta: " + this.getNomeDaConta());
		System.out.println("Saldo atual: " + this.getSaldo());
		System.out.println("Limite: " + this.getLimite());

	}
	
}
